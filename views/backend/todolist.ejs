            <!-- Animated -->
            <div class="animated fadeIn">
                <!-- Widgets  -->
                
                <!-- /Widgets -->
               
                <div class="clearfix"></div>
                <!-- Orders -->
                <div class="orders">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="box-title">Produtos</h4>
                                    <button type="button" class="btn btn-success mb-1" data-toggle="modal" data-target="#largeModal">
                                        <strong>+ Adicionar Produto</strong> 
                                        </button>
                                </div>
                                <div class="card-body--">
                                    <div class="table-stats order-table ov-h">
                        <table class="table table-striped messages">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Categoria</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Descriçao</th>
                                        <th scope="col">Preço</th>
                                        <th scope="col">imagem</th>
                                        <th scope="col">Apagar</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <%  for (let index in produto){ %>
                                        <tr>
                                            <td scope="row"><%= parseInt(index)+parseInt(1) %></td>
                                            <td><%= produto[index].nome %></td>
                                            <td><%= produto[index].categoria %></td>
                                            <td><%= produto[index].data.toDateString() %></td>
                                            <td style="max-width: 200px;"><%= produto[index].descricao %></td>
                                            <td><%= produto[index].preco %></td>
                                            <td><img class="shop-item-image" src="./imgcomment/<%= produto[index].images %>"></td>
                                            <th><a class="btn danger" href="./delete_product?id=<%= produto[index].id %>&image=<%= produto[index].images %>"><i style="color: red;" class="fa fa-trash"></i></a> | </th>
    
                                            <% } %>
                                        </tr>
                                       
                                
                                </tbody>
                            </table>
                                       
                                      
                                    </div> <!-- /.table-stats -->
                                </div>
                            </div> <!-- /.card -->
                        </div>  <!-- /.col-lg-8 -->

                      
                            </div>
                        </div> <!-- /.col-md-4 -->
                    </div>
                </div>
                <!-- /.orders -->
               
                <div class="modal fade" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                       <div class="modal-content">
                          <div class="modal-header">
                             <h5 class="modal-title" id="largeModalLabel"><strong>Adiciona um produto</strong> </h5>
                             <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                             </button>
                          </div>
                          <div class="card">
                             <div class="card-body card-block">
                                <form id="finished_work_frm" name="finished_work_frm" method="POST" action="./save_product" enctype="multipart/form-data">

                                    <select class="form-control" id="category" name="category">
                                        <option>Escolhe uma categoria</option> 
                                        <%  for (let index in categoria){ %>
                                          <option value="<%= categoria[index].nome %>"><%= categoria[index].nome %></option>
                                        <% } %>  
                                    </select>
                                   <div class="form-group"><label for="nf-name" class=" form-control-label">Nome</label><input type="nome" required="" id="nf-nome" name="nome" placeholder="Enter nome.." class="form-control"><span class="help-block"></span></div>
                                   <div class="form-group"><label for="nf-email" class=" form-control-label">Preço</label><input type="preco" required="" id="nf-preco" name="preco" placeholder="Enter preco.." class="form-control"><span class="help-block"></span></div>
                                   <div class="form-group"><label for="nf-product" class=" form-control-label">descriçao</label><input type="descricao" id="nf-descricao" required="" name="descricao" placeholder=".." class="form-control"><span class="help-block"></span></div>
                                   </label>
                                   
                                    <label for="myfile" class="form__label">Imagem do produto</label>
                                    <input type="file" class="form__input"  id="player-img" name="images" style="width: 250px;font-family:Arial, FontAwesome;margin: auto;"><br><br>
                                  
                                   
                                   <div class="col-12 col-md-9">
                                     
                                   </div>
                                   <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <button  type="submit" class="btn btn-primary">Confirmar</button>
                                 </div>
                                </form>
                             </div>
                          </div>
                         
                       </div>
                    </div>
                 </div>


